{
  "name": "nestjs-template",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "npm": "^10"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start watch | pino-pretty",
    "dev:debug": "nest start watch -debug | pino-pretty",
    "lint": "npm run prettier && npm run eslint",
    "eslint": "eslint \"{src,test,migrations}/**/*.ts\"",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier": "prettier --check \"{src,test,migrations}/**/*.ts\"",
    "prettier:fix": "prettier --write \"{src,test,migrations}/**/*.ts\"",
    "test:all": "npm run jest -- --selectProjects unit --selectProjects integration",
    "test:unit": "npm run jest -- --selectProjects unit",
    "test:integration": "npm run jest -- --selectProjects integration",
    "test:eslint": "NODE_OPTIONS=\"SNODE_OPTIONS --experimental-vm-modules\" npm run jest -- --selectProjects eslint",
    "jest": "LOG_LEVEL=silent node --expose-gc --max-old-space-size=4096 ./node_modules/.bin/jest --forceExit --logHeapUsage",
    "migration:generate": "npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d ./src/typeorm.config.ts ./migrations/migration",
    "migration:create": "npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create -d ./src/typeorm.config.ts ./migrations/migration",
    "migration:run": "npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d ./src/typeorm.config.ts",
    "migration:revert": "npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d ./src/typeorm.config.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "{src,test,migrations}/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "helmet": "^8.1.0",
    "nestjs-pino": "^4.4.0",
    "nestjs-zod": "^4.3.1",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.21",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.4.2",
    "pino-pretty": "^13.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
